<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>PasswordManager - @ViewData["Title"]</title>
  <link rel="stylesheet" asp-append-version="true" href="~/assets/site.css" />
  <link rel="shortcut icon" type="image/png" href="~/favicon_64.png" />
</head>

<body>
  <header class="content">
    <h1 class="app-title">PWD Manager</h1>
  </header>

  <main role="main" class="content">
    @RenderBody()
  </main>

  <footer>
    <div class="content">
      &copy;2022 - dkvz.eu - Web UI for my Password Manager
    </div>
  </footer>

  @RenderSection("Scripts", required: false)

  <script src="~/assets/site.js" asp-append-version="true"></script>

</body>

</html>
